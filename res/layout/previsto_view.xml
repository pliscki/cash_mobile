   	<TextView 
   		android:text="@string/emissao"   				
   		style="@style/label_view"/>
    <TextView 
   		android:id="@+id/previsto_view_tvDtEmissao"   				
   		style="@style/label_padrao"
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"/>
   	<include layout="@layout/separador"></include>
   	<TextView 
   		android:text="@string/alarme"   				
   		style="@style/label_view"/>
    <TextView 
   		android:id="@+id/previsto_view_tvAlarme"   				
   		style="@style/label_padrao"
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"/>
   	<include layout="@layout/separador"></include>
   	<TextView 
   		android:text="@string/pagamento_automatico"   				
   		style="@style/label_view"/>
    <TextView 
   		android:id="@+id/previsto_view_tvPagamentoAutomatico"   				
   		style="@style/label_padrao"
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"/>
   	<include layout="@layout/separador"></include>
</LinearLayout> 